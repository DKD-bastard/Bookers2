
<div class="container px-5 px-sm-0">
 <div class="row">
  <%= render 'user_info', user:@user %>

  <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
  		     <td>
   		      <%= image_tag @user.get_profile_image(100,100) %><br>
   		      <%= link_to @user.name, user_path(@user.id) %>
    		    </td>
          <td><%=link_to  @book.title, book_path(@book.id) %>
          </td>

          <td><%= @book.body %>
          </td>
          
          <% if @book.user == current_user %>
           <td>
            <%= link_to edit_book_path(@book.id), class:"btn btn-sm btn-success" do %>
               <i>Edit</i>
            <% end %>
           </td>
           <td>
             <%= link_to book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に消しますか?" do %>
              <i>Destroy</i>
              <% end %>
           </td>
          <% end %>
         </tr>
      </tbody>
      </table>
    </div>
  </div>
</div>
